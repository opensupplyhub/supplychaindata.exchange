{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "SC-DEX Core Schema",
    "description": "Schema for structured, machine-readable supply chain data.",
    "type": "object",
    "properties": {
        "locations": {
            "type": "array",
            "items": {
                "$ref": "components/location.json"
            }
        },
        "organizations": {
            "type": "array",
            "items": {
                "$ref": "components/organization.json"
            }
        },
        "affiliations": {
            "type": "array",
            "items": {
                "$ref": "components/affiliation.json"
            }
        }
    },
    "required": [
        "locations"
    ],
    "additionalProperties": true
}